<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNota"
        android:layout_width="@dimen/collapsed_width"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/imgBandera_marginRight"
        android:layout_marginEnd="@dimen/imgBandera_marginRight"
        android:contentDescription="@string/nota"/>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>